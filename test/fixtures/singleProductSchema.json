{
  "$schema": "http://json-schema.org/schema#",
  "id": "/singleProduct",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string"
    },
    "size": {
      "type": "string"
    },
    "color": {
      "type": "string"
    },
    "brand": {
      "type": "string"
    },
    "tags":  {
      "type": "array",
      "items": [
        {
          "type": "string"
        }
      ]
    },
    "image": {
      "type": "string"
    }
  }
}
